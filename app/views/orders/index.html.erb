<div class = 'row'>
  <div class = 'span 3 offset2'>

<%= render 'shared/content_title', title: "Orders" %>
  </div>
</div>

<div class = 'row'>

    <ul>
      <b><div class = 'span3'> <%= 'Product Name'%></b> </div>
        <b><div class = 'span3'><%= 'Address' %> </b></div>

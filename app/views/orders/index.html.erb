<% @orders.each do |order| %>
  <div class = "row">
    <div class = "span12">
      <p>
        <div class = 'span3'>
          <%= order.product_name %>
        </div>
          <div class = 'span3'>
          <%= order.address %>
          </div>
            <div class = 'span3'>
          <%= order.payment %>
            </div>
            
